{
    "source": {
        "include": ["../KuroOs/js", "README.md"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": ["plugins/markdown"],
    "opts": {
        "encoding": "utf8",
        "readme": "./README.md",
        "recurse": true,
        "verbose": true,
        "template": "./node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "homepageTitle": "Documentation",
            "default_theme": "light",
            "menu": [
                {
                  "title": "Github",
                  "link": "https://github.com/Kur0Daisuke/KuroOs/tree/main",
                  "target": "_blank"
                }
            ]
        }
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
}